<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/ip_tv_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="POLITECNICO DI TORINO"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ip_tv_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_tv_barcode"
        android:layout_centerHorizontal="true"
        android:text="Applicazioni Internet "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/ip_iv_foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/ip_tv_categoria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:src="@drawable/logopolito" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_tv_categoria"
        android:layout_centerHorizontal="true"
        android:text="2012/2013"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/ip_tv_prezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_tv_descrizione"
        android:layout_centerHorizontal="true"
        android:text="Bruno Bruzzano"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_tv_prezzo"
        android:layout_centerHorizontal="true"
        android:text="Giorgio Ciacchella"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:text="Ignazio Chiappone"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_centerHorizontal="true"
        android:text="Marco Mirabile"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ip_tv_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_iv_foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Autori:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>