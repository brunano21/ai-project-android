<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/listPage_header"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/listPage_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/spinner_allList"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/img_add_new_list"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_name"
                    android:src="@android:drawable/ic_menu_delete" />

                <ImageButton
                    android:id="@+id/img_delete_current_list"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/app_name"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>

            <ListView
                android:id="@+id/itemListView_ListFragment"
                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_height="430dp"
                android:layout_weight="0.79" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listPage_central"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_item_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_item_name_hint"
                android:imeOptions="actionSend"
                android:inputType="text" />

            <EditText
                android:id="@+id/edit_item_quantity"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_item_quantity_hint"
                android:imeOptions="actionSend"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_addItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_button_addItem" />

            <Button
                android:id="@+id/button_addItem_byBarCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_button_addItem_byBarCode" />

            <Button
                android:id="@+id/button_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_button_hint" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>