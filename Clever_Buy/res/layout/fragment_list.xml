<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner_allList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/itemListView_ListFragment"
        android:layout_width="wrap_content"
        android:layout_height="226dp"
        android:layout_weight="0.79" />

    <LinearLayout
        android:id="@+id/footer_listPage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_item_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_item_name_hint"
                android:imeOptions="actionSend"
                android:inputType="text" />

            <EditText
                android:id="@+id/edit_item_quantity"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_item_quantity_hint"
                android:imeOptions="actionSend"
                android:inputType="number" />

            <Spinner
                android:id="@+id/spinner_item_quantity"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:prompt="@string/desc_list_item_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_addItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_button_addItem" />

            <Button
                android:id="@+id/button_addItem_byBarCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="@string/string_button_addItem_byBarCode"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>