<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_item_acquistato"
            android:layout_alignBottom="@+id/checkBox_item_acquistato"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/checkBox_item_acquistato"
            android:singleLine="true"
            android:text="Descrizione prodotto"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/img_item_remove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_item_hint"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/img_item_hint"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/img_item_remove"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_help_hint" />

        <TextView
            android:id="@+id/text_item_supermercato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_item_name"
            android:layout_alignRight="@+id/img_item_remove"
            android:layout_below="@+id/text_item_name"
            android:text="Supermercato"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBox_item_acquistato"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/img_item_hint" />

        <TextView
            android:id="@+id/text_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_item_name"
            android:layout_alignBottom="@+id/text_item_name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/text_item_name"
            android:text="q"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
