<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/iup_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inserisci il prodotto nella lista della spesa" />

    <TextView
        android:id="@+id/iup_textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_description" />

   <EditText
        android:id="@+id/iup_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/iup_textView_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_barcode" />
    
   <EditText
        android:id="@+id/iup_editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>
    
 
   <ImageView
        android:id="@+id/iup_bc_img01" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_barcode"
        android:layout_marginTop="10dp"/>

   <Button
       android:id="@+id/iup_bc_btnScan"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Scan codice a barre" />

<TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="TextView" />
    
   <Button
       android:id="@+id/button1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Inserisci Prodotto" />

   
</LinearLayout>