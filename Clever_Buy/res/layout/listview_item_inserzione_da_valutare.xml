<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <TextView
        android:id="@+id/listview_item_inserzione_da_valutare_tv_descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview_item_inserzione_da_valutare_tv_prezzo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/listview_item_inserzione_da_valutare_iv_foto"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/listview_item_inserzione_da_valutare_iv_foto"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/listview_item_inserzione_da_valutare_tv_data_fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listview_item_inserzione_da_valutare_tv_scade_il"
        android:layout_alignBottom="@+id/listview_item_inserzione_da_valutare_tv_scade_il"
        android:layout_toRightOf="@+id/listview_item_inserzione_da_valutare_tv_scade_il"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/listview_item_inserzione_da_valutare_iv_foto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/no" />

    <TextView
        android:id="@+id/listview_item_inserzione_da_valutare_tv_scade_il"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listview_item_inserzione_da_valutare_iv_foto"
        android:layout_alignLeft="@+id/listview_item_inserzione_da_valutare_tv_descrizione"
        android:text="Scade il"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/listview_item_inserzione_da_valutare_tv_prezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listview_item_inserzione_da_valutare_tv_data_fine"
        android:layout_alignBottom="@+id/listview_item_inserzione_da_valutare_tv_data_fine"
        android:layout_alignRight="@+id/listview_item_inserzione_da_valutare_tv_descrizione"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>